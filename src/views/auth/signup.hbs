<div class="container p-5">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-center">
                        SIGN UP
                    </h3>
                </div>
                <div class="card-body">
                    <form action="/signup" method="POST">
                        <div class="form-group">
                            <input
                                type="text"
                                class="form-control"
                                name="fullname"
                                placeholder="Fullname"
                                autofocus
                                autocomplete="off"
                            >
                        </div>
                        <div class="form-group">
                            <input
                                type="text"
                                class="form-control"
                                name="username"
                                placeholder="Username"
                                autocomplete="off"
                            >
                        </div>
                        <div class="form-group">
                            <input
                                type="password"
                                name="password"
                                class="form-control"
                                placeholder="Password"
                            >
                        </div>
                        <button class="btn btn-success btn-block">
                            SAVE
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
