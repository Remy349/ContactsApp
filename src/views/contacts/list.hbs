<div class="container p-4">
    <div class="row">
        {{#each contacts}}
            <div class="col-md-3">
                <div class="card text-center mt-3">
                    <div class="card-header">
                        <h3 class="card-title">
                            Contact
                        </h3>
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">
                            {{contact_name}}
                        </h3>
                        <p class="m-2">
                            {{contact_number}}
                        </p>
                        <p>
                            {{timeago created_at}}
                        </p>
                        <a href="/contacts/delete/{{id}}" class="btn btn-danger">
                            DELETE
                        </a>
                        <a href="/contacts/edit/{{id}}" class="btn btn-secondary">
                            EDIT
                        </a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card">
                    <div class="card-body text-center">
                        <p>ThereÂ´re not contacts saved yet!</p>
                        <a href="/contacts/add" class="btn btn-primary">
                            SAVE A NEW ONE
                        </a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
