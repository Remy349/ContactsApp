<div class="container p-5">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="card-title">
                        New Contact
                    </h3>
                </div>
                <div class="card-body">
                    <form action="/contacts/add" method="POST">
                        <div class="form-group">
                            <input
                                type="text"
                                class="form-control"
                                name="contact_name"
                                placeholder="Contact Name"
                                autofocus
                                autocomplete="off"
                            >
                        </div>
                        <div class="form-group">
                            <input
                                type="text"
                                class="form-control"
                                name="contact_number"
                                placeholder="Contact Number"
                                autocomplete="off"
                            >
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                SAVE
                            </button>
                        </div>
                    </form>
                    <a href="/contacts" class="btn btn-danger btn-block">
                        CANCEL
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
